<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFragment"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/example1_tv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="1. 后台执行耗时操作，实时通知 UI 更新"/>

            <TextView
                android:id="@+id/example2_tv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="2. 计算一段时间内数据的平均值"/>

            <TextView
                android:id="@+id/example3_tv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="3. 优化搜索联想功能"/>

            <TextView
                android:id="@+id/example4_tv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="4. 结合 Retrofit 请求新闻资讯"/>

            <TextView
                android:id="@+id/example5_tv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="5. 简单及进阶的轮询操作"/>

            <TextView
                android:id="@+id/example6_tv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="6. 基于错误类型的重试请求"/>

            <TextView
                android:id="@+id/example7_tv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="7. 基于 combineLatest 实现的输入表单验证"/>

            <TextView
                android:id="@+id/example8_tv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="8. 使用 publish + merge 优化先加载缓存，再读取网络数据的请求过程"/>

            <TextView
                android:id="@+id/example10_tv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="10. 屏幕旋转导致 Activity 重建时恢复任务"/>

            <TextView
                android:id="@+id/example11_tv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="11. 检测网络状态并自动重试请求"/>

            <TextView
                android:id="@+id/example12_tv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="12. 使用buffer统计点击次数"/>

            <TextView
                android:id="@+id/example13_tv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="13. Fragment间订阅尝试"/>

            <TextView
                android:id="@+id/example14_tv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="14. Flowable背压"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>