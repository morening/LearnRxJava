<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".example11.Example11Fragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/example11_btn_layout"
        android:layout_marginBottom="50dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/example11_tv_city"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:text=" : "/>
        <TextView
            android:id="@+id/example11_tv_temperature"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/example11_btn_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/example11_btn_good_network"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="网络通畅" />

        <Button
            android:id="@+id/example11_btn_bad_network"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="网络阻塞"/>
    </LinearLayout>

</RelativeLayout>